<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="600.0" minWidth="500.0" prefHeight="600.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group38.kulturhus.controllers.ShowEventController">
  <top>
    <VBox styleClass="headerPane">
       <children>
       <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
         <menus>
           <Menu text="Arrangement">
             <items>
                 <MenuItem disable="true" text="Vis arrangementer" />
                 <MenuItem fx:id="addEvent" mnemonicParsing="false" onAction="#goToAddEvent" text="Opprett arrangement" />
             </items>
           </Menu>
           <Menu mnemonicParsing="false" text="Lokale">
             <items>
               <MenuItem fx:id="showVenue" mnemonicParsing="false" onAction="#goToShowVenue" text="Oversikt over lokaler" />
             </items>
           </Menu>
                  <Menu mnemonicParsing="false" text="ChangeFiles">
                     <items>
                        <MenuItem fx:id="readFromJOBJ" mnemonicParsing="false" onAction="#readFromJOBJ" text="ReadFromJobj" />
                        <MenuItem fx:id="readFromCSV" mnemonicParsing="false" onAction="#readFromCSV" text="ReadFromCsv" />
                     </items>
                  </Menu>
         </menus>
       </MenuBar>
       <Pane fx:id="headerPane" prefHeight="37.0" prefWidth="1000.0">
          <children>
            <Label layoutX="16.0" layoutY="6.0" text="Asbjørnsen og Moe Kulturhus" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
          </children>
       </Pane>
       </children>
    </VBox>
  </top>
  <center>
    <VBox>
       <children>
            <VBox prefHeight="58.0" prefWidth="408.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Alle Arrangementer">
                           <font>
                              <Font size="26.0" />
                           </font>
                        </Label>
                        <Label prefHeight="48.0" prefWidth="488.0" text="Velg ett arrangement for å endre, reservere eller vise reserverte billetter og mer informasjon.">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label prefHeight="46.0" prefWidth="173.0" text="Filtrer arrangementer:" />
                        <TextField fx:id="filtering">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </VBox>
       <TableView fx:id="eventsView" prefHeight="384.0" prefWidth="667.0" BorderPane.alignment="CENTER">
         <columns>
           <TableColumn fx:id="eventNameColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="176.0" text="Arrangement" />
           <TableColumn fx:id="eventDateColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="151.0" text="Dato" />
           <TableColumn fx:id="eventTimeColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="170.0" text="Tid" />
           <TableColumn fx:id="eventFacilityColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="167.0" text="Sted" />
         </columns>
         <BorderPane.margin>
           <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </BorderPane.margin>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
       </TableView>
            <HBox alignment="TOP_CENTER" nodeOrientation="RIGHT_TO_LEFT" prefHeight="50.0" prefWidth="795.0" VBox.vgrow="ALWAYS">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
               <children>
             <Button mnemonicParsing="false" onAction="#goToBuyTicket" text="Reserver billett" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
             <Button mnemonicParsing="false" onAction="#goToVisInfo" text="Vis mer info / vis reserverte billetter" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
             <Button mnemonicParsing="false" onAction="#goToCreateEvent" text="Endre arrangement" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
             <Button mnemonicParsing="false" onAction="#deleteRow" text="Slett arrangement" textAlignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
       </children>
    </VBox>
  </center>
</BorderPane>
