<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group38.kulturhus.controllers.ShowTicketsController">
    <top>
        <MenuBar fx:id="menuBar" stylesheets="@styles.css" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Arrangement">
                    <items>
                        <MenuItem fx:id="addEvent" mnemonicParsing="false" onAction="#goToAddEvent" text="legg til nytt arrangement" />
                        <MenuItem fx:id="addEvent1" mnemonicParsing="false" onAction="#goToAddEvent" text="endre arrangement" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Billett">
                    <items>
                        <MenuItem fx:id="addTicket" mnemonicParsing="false" onAction="#goToAddTicket" text="Reserver billett" />
                        <MenuItem fx:id="showTicket" mnemonicParsing="false" onAction="#goToShowTicket" text="Vis billetter" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Lokale">
                    <items>
                        <MenuItem fx:id="showVenue" mnemonicParsing="false" onAction="#goToShowVenue" text="Oversikt over lokaler" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>


      <Label layoutX="25.0" layoutY="31.0" text="Billetter">
         <font>
            <Font name="System Bold" size="29.0" />
         </font>
      </Label>

    <center>
      <TableView fx:id="ticketsView" layoutX="25.0" layoutY="68.0" prefHeight="318.0" prefWidth="552.0" BorderPane.alignment="CENTER">

          <columns>
              <TableColumn text="Telefonnummer" fx:id="phoneNumberColumn"/>
              <TableColumn text="Seterad" fx:id="seatRowColumn" prefWidth="107.0"  />
              <TableColumn text="Setenummer" fx:id="seatNumberColumn" prefWidth="263.0"/>
              <TableColumn text="Endre"/>
          </columns>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>


      </TableView>
    </center>
   <left>
      <SplitPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Tittel" fx:id="eventName" GridPane.columnSpan="2">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <Label text="Dato" GridPane.rowIndex="1" />
                         <Label fx:id="eventDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                         <Label text="Klokken" GridPane.rowIndex="2" />
                         <Label fx:id="eventTime" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Sted" GridPane.rowIndex="3" />
                         <Label fx:id="eventFacility" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                     </children>
                  </GridPane>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Artist/Deltaker/Skuespiller" GridPane.columnSpan="3">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                        <Label fx:id="eventPerformers" GridPane.rowIndex="1" />
                        <Label text="Program/Beskrivelse" GridPane.rowIndex="2" GridPane.columnSpan="3">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                        <Label fx:id="eventProgram" GridPane.rowIndex="3" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </left>

</BorderPane>
