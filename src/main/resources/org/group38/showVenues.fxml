<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group38.kulturhus.controllers.ShowVenueController">
    <top>
        <VBox>
            <MenuBar fx:id="menuBar" minHeight="500.0" minWidth="600.0" prefHeight="600.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
                <menus>
                    <Menu mnemonicParsing="false" text="Event">
                        <items>
                            <MenuItem fx:id="addEvent" mnemonicParsing="false" onAction="#goToAddEvent" text="Add..." />
                            <MenuItem fx:id="showEvent" mnemonicParsing="false" onAction="#goToShowEvent" text="Show..." />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Ticket">
                        <items>
                            <MenuItem fx:id="addTicket" mnemonicParsing="false" onAction="#goToAddTicket" text="Add.." />
                            <MenuItem fx:id="showTicket" mnemonicParsing="false" onAction="#goToShowTicket" text="Show..." />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Venue">
                        <items>
                            <MenuItem fx:id="showVenue" mnemonicParsing="false" onAction="#goToShowVenue" text="Show..." />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
        </VBox>
    </top>
</BorderPane>
