<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane fx:id="anchorpaneFront" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group38.FrontpageController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="Event">
                  <items>
                    <MenuItem fx:id="addEvent" mnemonicParsing="false" text="Add..." />
                        <MenuItem fx:id="showEvent" mnemonicParsing="false" text="Show..." />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ticket">
                  <items>
                    <MenuItem fx:id="addTicket" mnemonicParsing="false" onAction="#goToTicket" text="Add.." />
                        <MenuItem fx:id="showTicket" mnemonicParsing="false" text="Show..." />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Venue">
                     <items>
                        <MenuItem fx:id="showVenue" mnemonicParsing="false" text="Show..." />
                     </items>
                  </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <Button mnemonicParsing="false" onAction="#goToTicket" text="Button" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
