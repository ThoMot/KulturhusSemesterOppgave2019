<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.group38.FrontpageController" prefHeight="400.0" prefWidth="600.0">
      <top>
        <MenuBar >
            <menus>
                <Menu text="Arrangement">
                    <items>
                        <MenuItem text="Add..." />
                    </items>
                    <items>
                        <MenuItem text="Show..."/>
                    </items>
                </Menu>
                <Menu text="Billett">
                    <items>
                        <MenuItem text="Add..." />
                    </items>
                    <items>
                        <MenuItem text="Show..."/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
      </top>
    <center>
        <TableView fx:id="contactsTable">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="First Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="firstName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Last Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Phone Number">
                    <cellValueFactory>
                        <PropertyValueFactory property="phoneNumber"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="notes">
                    <cellValueFactory>
                        <PropertyValueFactory property="notes"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>

    <Button fx:id="Knapp1" text="Lokaler" layoutX="50" layoutY="50" ></Button>
    <Button fx:id="Knapp2" text="Arrangementer" layoutX="150" layoutY="50"></Button>
    <Button fx:id="Knapp3" text="Billetter" layoutX="250" layoutY="50"></Button>
    <Button fx:id="Knapp4" text="Kontaktpersoner" layoutX="350" layoutY="50"></Button>
    <Label fx:id="label" layoutX="100" layoutY="100" minHeight="400" minWidth="400" text="Arrangementliste her"/>

</BorderPane>
